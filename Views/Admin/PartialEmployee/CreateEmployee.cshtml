<div class="modal fade" id="modalEmployeeCreate" data-bs-keyboard="false" data-bs-backdrop="static" tabindex="-1"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-body d-flex justify-content-center">
                    <h5 class="modal-title" id="exampleModalLabel">Create Employee</h5>
                </div>
                <button type="button" id="modalEmployeeCreateClose" class="btn-close btn-light" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body EmployeeCreate d-flex justify-content-center">
                <div>

                    <form id="createEmployeeForm">

                        <div class="form-group">
                            <label name="" class="control-label">First Name</label>
                            <input type="text" name="Firstname" id="inputMedicineName" placeholder="Enter First Name"
                                class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label name="" class="control-label">Last Name</label>
                            <input type="text" name="Lastname" id="inputMedicineName" placeholder="Enter Last Name"
                                class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label name="" class="control-label">Middle Name</label>
                            <input type="text" name="Middlename" id="inputMedicineName" placeholder="Enter Middle Name"
                                class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label name="" class="control-label">Birthdate</label>
                            <input type="date" name="Birthdate" id="inputMedicineName" placeholder="Enter Birthdate"
                                class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label name="" class="control-label">Gmail address</label>
                            <input type="text" name="Gmailaddress" id="inputUnit" placeholder="Enter GmailAddress"
                                class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label name="" class="control-label">Address</label>
                            <input type="text" name="Address" id="inputUnit" placeholder="Enter GmailAddress"
                                class="form-control" required />
                        </div>


                        <div class="form-group">
                            <span class="form-label">Select Gender </span>
                            <select name="Gender" class="form-select genders" id="gend">
                                <option>Male</option>
                                <option>Female</option>



                            </select>
                        </div>


                    </form>


                </div>

            </div>
            <div class="modal-footer">
                <div class="modal-body d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" id="createEmployee">Confirm</button>
                </div>
            </div>
        </div>

    </div>
</div>
